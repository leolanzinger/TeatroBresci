body
  margin-top 48px

h2
  font-size 1.6em
  color #2C3E50
  margin-top 1.5em
  margin-bottom .5em

h1
  font-size 3.5em
  color red
  margin-top .5em
  margin-bottom 0
  
ul
  padding 0

a:hover
  color red
  text-decoration none

button
  background red
  color white
  border-radius 5px
  border transparent
  margin-top .8em
  font-size 20px

.text-center
  text-align center

.text-right
  text-align right

span.amp
  font-family: Baskerville, Palatino, "Book Antiqua", serif;
  font-style: italic;
  font-weight 300

#notfound-title 
  color white
  text-shadow 0 1px 2px black
  position absolute
  bottom 80px
  h1
    font-size 60px


#notfound-parallax
  height 500px
  position relative
  overflow hidden
  background-size cover !important

.css-events-list img
  height 1em
  width auto
  margin-bottom 5px
  margin-top 0

.em-location-map, .em-locations-map, .em-location-map-container
  float right

@media screen and (max-width: 500px)
  #spettacoli-title, #bio-title
    font-size 40px

  h1
    font-size 40px

@media screen and (max-width: 767px)
  .container
    padding-right 25px
    padding-left 25px

  .em-location-map-container
    display none

.p1 a, p span a
  color red