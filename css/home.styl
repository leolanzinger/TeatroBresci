@import '../bower_components/nib'

h2
  font-family: 'Raleway', sans-serif;

#parallax-wrapper
  position relative

#home-parallax
  background: url("img/home.jpg")
  height 650px
  background-repeat no-repeat
  background-size cover
  background-position center
  margin-top -88px
@media screen and (max-width 1047px)
  #home-parallax
    height 550px
@media screen and (max-width 500px)
  #home-parallax
    height 380px
    background-position center
  #scroll-me
    display none

@keyframes Floatingx {
    0% {transform:translate(0, 0px);}
    8% {transform:translate(0, 5px);}
    16% {transform:translate(0, 0px);}
    24% {transform:translate(0, 5px);}
    32% {transform:translate(0, 1px);}
    100% {transform: translate(0, -1px);    
  }    
}

#scroll-me
  position: absolute;
  bottom: 0;
  text-align: center;
  width: 100%;
  color white
  .floatx
    margin-top 1em
    animation-name: Floatingx
    animation-duration: 1.5s
    animation-iteration-count: infinite

#home-intro
  font-size: 24px;
  margin: 1em auto;

#home-events
  list-style-type none
  margin-bottom 1em

.events-date-wrapper
  background url("img/exagon.png")
  background-size cover
  background-repeat no-repeat
  padding 5px
  width 51px
  height 58px
  float left
  line-height 1.5em
  margin-right 1em

.events-date
  color white
  font-weight bold
  text-align center
  line-height 1.1em
  margin: 4px 0 0 0;
  span
    font-size 1.4em

.events-name, .events-place
  line-height 1.2em
  margin 0
  font-size 1.4em

#facebook iframe
  height 600px