#spettacoli-container
  margin-left -4%
  overflow hidden

.spettacoli-mask
  height 500px
  overflow hidden
  width 24%
  margin-right 1%
  transform:skewX(-20deg)
  float left
  img
    height 100%
    margin-left -35%
    transform:skewX(20deg)

.spettacoli-title
  position absolute
  top 0
  transform:skewX(20deg)
  font-family Georgia, serif
  color white
  right 0
  z-index 200
  margin-top .4em
  margin-right 1em
  text-shadow 0 1px 1px #353535

@media screen and (max-width: 768px)
  .spettacoli-mask
    width 49%
    margin-bottom 1em