tile-height = 220px

#corsi-title
  margin-top .8em
@media screen and (max-width: 500px)
  #corsi-title
    font-size 40px

.corso-tile
  background #F2F2F2
  height tile-height
  margin-bottom 1em

.corso-picture
  width tile-height
  float left
  overflow hidden
  margin-right 10px
  img 
    height 100%
    padding 5px

.corso-caption
  width calc(100% \- 230px)
  float left
  padding-right 10px
  p
    margin-top .2em

.corso-title
  margin 0
  color red
  font-family Georgia, serif
  margin-bottom 0

.tile-informazioni
  padding .4em
  background red
  color white
  border-radius 4px
  text-align center
  font-size 16px
  line-height 1em